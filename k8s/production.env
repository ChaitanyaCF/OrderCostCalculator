# Production Environment Configuration for Order Cost Calculator

# Application Configuration
APP_NAME=order-cost-calculator
APP_VERSION=latest
NAMESPACE=order-cost-calculator

# Docker Registry Configuration
DOCKER_REGISTRY=your-registry.com
DOCKER_USERNAME=your-username
DOCKER_PASSWORD=your-password

# Domain Configuration
DOMAIN=your-domain.com
TLS_SECRET_NAME=order-cost-calculator-tls

# Database Configuration (for production use)
# Uncomment and configure for external database
# DB_HOST=postgres-service
# DB_PORT=5432
# DB_NAME=order_cost_calculator
# DB_USERNAME=postgres
# DB_PASSWORD=your-secure-password

# Security Configuration
JWT_SECRET=your-very-secure-jwt-secret-key-here
JWT_EXPIRATION=86400000

# Resource Limits
BACKEND_CPU_REQUEST=250m
BACKEND_CPU_LIMIT=500m
BACKEND_MEMORY_REQUEST=512Mi
BACKEND_MEMORY_LIMIT=1Gi

FRONTEND_CPU_REQUEST=100m
FRONTEND_CPU_LIMIT=200m
FRONTEND_MEMORY_REQUEST=128Mi
FRONTEND_MEMORY_LIMIT=256Mi

# Scaling Configuration
BACKEND_MIN_REPLICAS=2
BACKEND_MAX_REPLICAS=10
FRONTEND_MIN_REPLICAS=2
FRONTEND_MAX_REPLICAS=5

# Storage Configuration
STORAGE_CLASS=fast-ssd
DATA_STORAGE_SIZE=10Gi
LOGS_STORAGE_SIZE=2Gi

# Monitoring Configuration
ENABLE_MONITORING=true
PROMETHEUS_ENDPOINT=/metrics
GRAFANA_DASHBOARD=true
